<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgregarProducto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/baja_add">

        <ImageView
            android:id="@+id/cargar_imagen"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@drawable/rectangulo_redondo"
            android:backgroundTint="#DDDBDB"
            app:srcCompat="@mipmap/agregar_imagen"></ImageView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="ID de Producto: "
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/opt_id"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="text">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Nombre: "
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/opt_nombre"
                android:layout_width="150dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:inputType="text">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Precio:"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/opt_precio"
                android:layout_width="60dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:inputType="number">
            </EditText>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_marginStart="10dp"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:text="Stock:"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
            <EditText
                android:id="@+id/opt_stock"
                android:layout_width="60dp"
                android:textSize="15sp"
                android:layout_height="wrap_content"
                android:inputType="number">
            </EditText>
        </LinearLayout>

        <ImageView
            android:id="@+id/ver_qr"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            app:srcCompat="@mipmap/qr_logo"></ImageView>
    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/baja_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <Button
            android:id="@+id/agregrar_boton"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#002AFF"
            android:text="AGREGAR">
        </Button>
        <Button
            android:id="@+id/salir_boton"
            android:layout_marginStart="120dp"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF0000"
            android:text="SALIR">
        </Button>
    </LinearLayout>
</RelativeLayout>